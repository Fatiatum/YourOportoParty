<%= render 'shared/admin_navbar' %>
<section class="about_us_area" id="ABOUT">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="about_title">
          <h1 style="margin-top: 10%">Editing Product</h1>
          <%= image_tag "shape.png" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for @product do |f| %>

        <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@product.errors.count, "error") %> prohibited
            this product from being saved:
          </h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="col-md-6">
          <p>
            <%= f.label :name_pt %><br>
            <%= f.text_field :name_pt,class: "form-control"  %>
          </p>


          <p>
            <%= f.label :description_pt %><br>
            <%= f.text_area :description_pt,class: "form-control"  %>
          </p>
          <p>
            <%= f.label :image %><br>
            <%= f.file_field :image %>
          </p>
        </div>
        <div class="col-md-6">
          <p>
            <%= f.label :name_en %><br>
            <%= f.text_field :name_en,class: "form-control"  %>
          </p>
          <p>
            <%= f.label :description_en %><br>
            <%= f.text_area :description_en,class: "form-control"  %>
          </p>



          <p>
            <%= f.submit %>
          </p>
        </div>
        <% end %>

        <%= link_to 'Show', @product %> |
        <%= link_to 'Back', products_path %>
      </div>
    </div>
  </section>


