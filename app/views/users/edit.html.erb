<%= render 'shared/admin_navbar' %>

<section class="about_us_area" id="ABOUT">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="about_title">
                        <h1 style="margin-top: 10%">EDIT ADMIN INFO</h1>
                        <%= image_tag "shape.png" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <%= form_for @user do |f| %>
                   
                    <p>
                      <%= f.label :email %><br>
                      <%= f.text_field :email,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :password %><br>
                      <%= f.text_field :password,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :nib %><br>
                      <%= f.text_field :nib,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :iban %><br>
                      <%= f.text_field :iban,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :fb_link %><br>
                      <%= f.text_field :fb_link,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :tw_link %><br>
                      <%= f.text_field :tw_link,class: "form-control" %>
                    </p>

                    <p>
                      <%= f.label :insta_link %><br>
                      <%= f.text_field :insta_link,class: "form-control" %>
                    </p>
                   
                    <p>
                      <%= f.submit %>
                    </p>
                   
                  <% end %>
                   
                  <%= link_to 'Back',   root_url  %>
                </div>
            </div>
</section>

 


