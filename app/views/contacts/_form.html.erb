<div class="col-md-9  wow fadeInRight animated">
	<div class="row">
		<div class="col-md-6">
			<form action="https://formspree.io/<%= @contact.email_pt %>"
				method="POST">
				<div>
					<input class="form-control" type="text" name="name" placeholder="Your Name">
				</div>
				<div>
					<input class="form-control" type="email" name="email" placeholder="Your email"> <br>
				</div>
				<div>
					<input class="form-control" type="text" name="subject" placeholder="Subject of the msg">
				</div>
				<div>
					<textarea class="form-control" name="message" placeholder="Your message"></textarea>
				</div>  
				<hr>                
				<input type="submit" value="Send" class="btn btn-default submit-btn">
			</form>                        
		</div>
	</div>
</div>





